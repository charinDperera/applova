<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ex_card_title_lbl">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ex_card_title">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ex_card_subTitle_lbl">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ex_card_subTitle">

    </style>

    <style name="create_title">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="create_sub_title">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="card_lbl">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="card_text">
        <item name="android:textSize">21sp</item>
    </style>

    <style name="product_card_lbl">

    </style>

    <style name="product_card_text">

    </style>
